<% include ../../header.ejs %>
<% include ../../navibar.ejs %>
  <div class="" style="text-align : right;">
    <div class="panel panel-default col-sm-offset-1 col-sm-10" style="text-align : center; margin-top : 1%; padding : 0px; letter-spacing : 5px;">
      <div class="panel-heading" style="text-align : left;">
        <h3>Free game</h3>
      </div>
      <div class="panel-body">
        <div class="col-sm-4">
          <img class="" src="/static/center.png" style="width : 100%;" alt="">
        </div>
        <div class="col-sm-8">
          <form class="form-group" method="post" action="" id="form" style="width : 100%;">
            <% var today = new Date %>
            <table class="table table-responsive table-borderless">
              <tr>
                <td class="col-sm-4">host</td>
                <td class="col-sm-8" colspan=2><input class="form-control" type="text" name="host" value="<%=userData.profile.name%>" style="width : 100%" readonly></td>
              </tr>
              <tr>
                <td colspan=3><div class="form-control" id="map" style="width : 100%; height : 350px;"></div></td>
              </tr>
              <tr>
                <td class="col-sm-4">search</td>
                <td class="col-sm-6"><input class="form-control" type="text" name="" id="keyword"></td>
                <td class="col-sm-2"><button class="btn btn-default" id="search">search</button></td>
              </tr>
              <tr>
                <td>court</td>
                <td colspan=2><input class="form-control" id="court" type="text" name="court" value="" style="width : 100%" readonly></td>
              </tr>
              <tr>
                <td>addr</td>
                <td colspan=2><input class="form-control" id="addr" name="addr" type="text" name="" value="" style="width : 100%" readonly></td>
              </tr>
              <tr>
                <td>date</td>
                <td colspan=2><input class="form-control" type="text" id="datepicker" name="date" placeholder="<%=today.toLocaleDateString()%>" style="width : 100%;"></td>
              </tr>
              <tr>
                <td>time</td>
                <td colspan=2><input class="form-control" id="timepicker" type="text" name="time" placeholder="please set time" style="width : 100%;"></td>
              </tr>
            </table>
            <input type="hidden" id="x" name="x" value="" readonly>
            <input type="hidden" id="y" name="y" value="">
              <input class="col-sm-offset-2 col-sm-4 btn btn-default" type="submit" name="" value="regist" style="letter-spacing : 5px;">
              <button class="col-sm-offset-2 col-sm-4 btn btn-default" type="button" name="button" onclick="history.back(-2)" style="letter-spacing : 5px;">cancel</button>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $("#datepicker").datepicker({
    minDate : 0,
    dateFormat: 'yy-mm-dd'
  });
  $(function() {
    $('#timepicker').timepicker({
      timeFormat: 'h:mm p',
      interval: 30,
      minTime: '7',
      maxTime: '10:00pm',
      startTime: '07:00',
      dynamic: false,
      dropdown: true,
      scrollbar: true
    });
  });
    $('#form').submit(function(){
      var court = $('#court').val();
      var datepicker = $('#datepicker').val();
      var timepicker = $('#timepicker').val();
      var addr = $('#addr').val();
      if (datepicker == ""){
        alert("you have to choose date");
        return false;
      } else if(timepicker == ""){
        alert("you have to choose time");
        return false;
      } else if (addr == ""){
        alert("you have to insert address");
        return false
      } else if (court ==""){
        alert("you have to input court name")
        return false
      }
    });
</script>
